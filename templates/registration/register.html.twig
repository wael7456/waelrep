{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}






{% block body %}
<div class="registration-container">
  <link rel="stylesheet" href="{{ asset('css/register.css') }}">

    <div class="registration-card">
        <div class="card-header-custom">
            <i class="bi bi-person-plus-fill header-icon"></i>
            <h2 class="header-title">Inscription</h2>
        </div>
        
        <div class="card-body-custom">
            {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}
            
            <div class="form-group-custom">
                {{ form_label(registrationForm.email, 'Adresse e-mail', {'label_attr': {'class': 'form-label-custom'}}) }}
                <div class="position-relative">
                    <i class="bi bi-envelope input-icon"></i>
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'placeholder': 'votre.email@exemple.com',
                            'class': 'form-control-custom form-control-with-icon'
                        }
                    }) }}
                </div>
            </div>
            
            <div class="form-group-custom">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'form-label-custom'}}) }}
                <div class="position-relative">
                    <i class="bi bi-lock input-icon"></i>
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'placeholder': 'Choisissez un mot de passe sécurisé',
                            'class': 'form-control-custom form-control-with-icon'
                        }
                    }) }}
                </div>
            </div>
            
            <div class="form-check-custom">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input-custom'}}) }}
                {{ form_label(registrationForm.agreeTerms, 'J\'accepte les conditions d\'utilisation et la politique de confidentialité', {
                    'label_attr': {'class': 'form-check-label-custom'}
                }) }}
            </div>
            
            <button type="submit" class="btn-register">
                <i class="bi bi-check-circle me-2"></i>
                Créer mon compte
            </button>
            
            {{ form_end(registrationForm) }}
            
            <div class="login-link">
                <p class="mb-0">
                    Vous avez déjà un compte ? 
                    <a href="{{ path('app_login') }}">
                        <i class="bi bi-box-arrow-in-right me-1"></i>
                        Connectez-vous
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}